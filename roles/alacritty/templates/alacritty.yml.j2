window:
  dimensions:
    columns: 92
    lines: 24
  opacity: 1.0

font:
  normal:
    family: Source Code Pro
    style: Regular

  bold:
    family: hack
    style: Bold

  italic:
    family: hack
    style: Italic

  bold_italic:
    family: hack
    style: Bold Italic

  size: 6

import:
  - {{ alacritty['color_scheme'] }}

draw_bold_text_with_bright_colors: true
env:
  WINIT_X11_SCALE_FACTOR: "1.75"
